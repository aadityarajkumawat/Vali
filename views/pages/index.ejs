<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <main>
            <div class="head-images">
                <img src="https://i.ibb.co/9nd4fsw/discord.png" alt="" />
                <span class="seperator"></span>
                <img src="https://i.ibb.co/XsT6m9M/jklu.png" alt="" />
            </div>
            <h1>Verify your JKLU E-Mail address</h1>
            <% if(warning !== '') { %>
            <div class="warning"><%=warning%></div>
            <% } %>
            <form id="verify-form" method="POST" action="#">
                <input
                    type="text"
                    name="name"
                    placeholder="Name"
                    id="name-inp"
                    required="true"
                />
                <input
                    type="email"
                    name="email"
                    placeholder="Email"
                    id="email-inp"
                    required="true"
                />
                <div class="role-selector-container">
                    <label for="role">For students only</label>
                    <select name="role" id="role-selector">
                        <option value="none">None</option>
                        <option value="none">
                            Institute of Engineering and Technology
                        </option>
                        <option value="none">Institute of Design</option>
                        <option value="none">Institute of Management</option>
                    </select>
                </div>
                <input type="submit" value="Verify" />
            </form>
        </main>
    </body>

    <script>
        if (document) {
            document
                .getElementById('verify-form')
                .setAttribute('action', '<%-path%>')
        }
    </script>
</html>
